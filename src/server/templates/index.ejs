<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link rel="stylesheet" href="/css/lobby.css">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>

<body>
    <nav>
        <div class="logo">
            <svg width="400" height="150" viewBox="0 0 400 150" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <!-- Gradient Fill -->
                    <linearGradient id="unoFill" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" stop-color="#FF0000" />
                        <stop offset="100%" stop-color="#FFD700" />
                    </linearGradient>

                    <!-- Black outline -->
                    <filter id="outline">
                        <feMorphology in="SourceAlpha" result="DILATED" operator="dilate" radius="3" />
                        <feFlood flood-color="black" result="BLACK" />
                        <feComposite in="BLACK" in2="DILATED" operator="in" result="OUTLINE" />
                        <feMerge>
                            <feMergeNode in="OUTLINE" />
                            <feMergeNode in="SourceGraphic" />
                        </feMerge>
                    </filter>
                </defs>

                <!-- UNO Letters -->
                <text x="20" y="110" font-family="'Arial Black', sans-serif" font-size="100" font-style="italic"
                    fill="url(#unoFill)" filter="url(#outline)">
                    UNO
                </text>
            </svg>
        </div>
        <ul>
            <li><a href="/faq">FAQ</a></li>
        </ul>
    </nav>
    <div class="layout chat-closed">
        <div class="open-chat" title="Open chat">â€¹</div>
        <div class="modal hidden">
            <div class="modal-content">
                <h2>New Game Options</h2>
                <form id="new-game-form">
                    <label for="game-name">Game Name:</label>
                    <input type="text" id="game-name" name="game-name" required />

                    <!-- <label for="system-players">System Players:</label> -->
                    <!-- <select id="system-players" name="system-players">
                        <option value="3">3</option>
                        <option value="2">2</option>
                        <option value="1">1</option>
                        <option value="1" selected>0</option>
                    </select> -->

                    <div class="modal-buttons">
                        <button type="submit">Start Game</button>
                        <button class="modal-close" type="button">Cancel</button>
                    </div>
                </form>

            </div>
        </div>
        <div class="container">
            <h1>Welcome to the Uno Lobby!</h1>
            <!-- <div class="card">
            <img src="/card_img/card_back.svg" alt="">
        </div>
        <button class="start">Start Game!</button> -->
            <div class="inner-container">
                <div class="card">
                    <div class="header-container">
                        <h2>Start New Game</h2>
                    </div>
                    <p>Start your own Uno game. Click start to enter a brand new game, other players will eventually
                        join!
                    </p>
                    <button class="btn start-btn">Start Game</button>
                </div>
            </div>
            <h2>Join a Waiting Game</h2>
            <div class="inner-container join-game-container">
            </div>
            <h2>Your current active games</h2>
            <div class="inner-container active-games-container">
            </div>
        </div>
        <div class="chat hidden">
            <div class="chat__header">
                <h3>Chat Messages</h3>
            </div>
            <div class="chat__messages"></div>
            <div class="chat__post">
                <input type="text" name="chat-post" id="chat-post" placeholder="write a message...">
                <button id="chat-submit" title="Send">
                    <span class="material-symbols-outlined">send</span>
                </button>
            </div>
        </div>
    </div>
    <script src="/js/lobby.js"></script>
    <script>
        document.querySelector(".logo").addEventListener("click", () => {
            window.location.href = "/"
        })
    </script>
</body>

</html>