<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
</head>
<style>
    h1 {
        text-align: center;

    }
    .container {
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .card {
        width: calc(250px);
        height: calc(380px);
    }
    img {
        width: 100%;
    }
</style>
<body>
    <h1>Uno: team 14!</h1>
    <div class="container">
        <div class="card">
            <img src="card_back.svg" alt="">
        </div>
        <button class="start">Start Game!</button>
    </div>
    <script>
        document.querySelector(".start").addEventListener("click", async () => {
            const res = await fetch("/api/join",
            {
                method: "post",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({userId: "1234"})
            })
            const resJson = await res.json()
            if(!resJson.success) {
                console.log("error")
            } 
            window.location.href = `/game?gid=${resJson.gid}`
        })
    </script>
</body>
</html>